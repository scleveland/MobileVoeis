<div class="pageTitle">
  <h1>Edit <%= @sites.name %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :show, :id => @sites.object %>">Cancel</a>
  </div>
  <div class="rightItem regularButton">
    <a class="button" href="<%= url_for :action => :delete, :id => @sites.object %>">Delete</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @sites.object %>"/>
    <ul>
      
          <li>
            <label for="sites[name]" class="fieldLabel">Name</label>
            <input type="text" name="sites[name]" value="<%= @sites.name %>" <%= placeholder( "Name" ) %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Update"/>
  </form>
</div>